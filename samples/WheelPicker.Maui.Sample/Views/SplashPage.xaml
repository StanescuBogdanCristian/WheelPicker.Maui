<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WheelPicker.Maui.Sample.Views.SplashPage"
             Shell.PresentationMode="NotAnimated"
             BackgroundColor="{StaticResource Splash}">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Splash}"
                                   StatusBarStyle="LightContent"
                                   ApplyOn="OnBehaviorAttachedTo" />
    </ContentPage.Behaviors>
    <Grid VerticalOptions="Center">
        <Image x:Name="LogoImage"
               Source="logo.png"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="200"
               HeightRequest="200" />

        <Label x:Name="WheelPickerLabel"
               Text="WheelPicker"
               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
               FontSize="35"
               FontFamily="PoppinsBold"
               HorizontalTextAlignment="Center"
               VerticalOptions="End" />
    </Grid>
</ContentPage>