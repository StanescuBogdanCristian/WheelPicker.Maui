<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:WheelPicker.Maui.Sample.ViewModels"
             xmlns:wp="clr-namespace:WheelPicker.Maui;assembly=SBC.WheelPicker.Maui"
             x:Class="WheelPicker.Maui.Sample.Views.SamplesPage"
             x:Name="root"
             Title="Samples of real use cases">

    <ContentPage.BindingContext>
        <models:SamplesPageViewModel />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="auto,*"
          RowSpacing="10">
        <ContentView BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                     Padding="10,15">
            <Label Text="{Binding Source={x:Reference root}, Path=Title}"
                   FontSize="15"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center" />
            <ContentView.Shadow>
                <Shadow Brush="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                        Offset="0,1"
                        Radius="5"
                        Opacity="0.2" />
            </ContentView.Shadow>
        </ContentView>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout>

                <toolkit:Expander x:Name="TimerExpander"
                                  MaximumWidthRequest="500"
                                  Margin="10">
                    <toolkit:Expander.Header>
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                StrokeThickness="0"
                                Padding="10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,auto">
                                <Label Text="Timer"
                                       VerticalTextAlignment="Center"
                                       FontSize="Medium" />
                                <Label Text="&#x25BC;"
                                       VerticalTextAlignment="Center"
                                       Grid.Column="1">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding Source={x:Reference TimerExpander}, Path=IsExpanded}"
                                                     Value="True">
                                            <Setter Property="RotationX"
                                                    Value="180" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </Border>
                    </toolkit:Expander.Header>
                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                            StrokeThickness="0"
                            TranslationY="-8"
                            Padding="24">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0,0,8,8" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="24">
                            <BoxView HeightRequest="1"
                                     Opacity=".3" />
                            <Grid ColumnDefinitions="*,auto,*,auto,*"
                                  RowDefinitions="auto,*"
                                  ColumnSpacing="10"
                                  RowSpacing="10"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Start">
                                <Label Text="Hours"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Margin="3,0"
                                       Grid.Row="0"
                                       Grid.Column="0" />
                                <wp:WheelPicker x:Name="WheelPickerHours"
                                                ItemsSource="{Binding HoursItems}"
                                                SelectedIndex="{Binding Hours, Mode=TwoWay}"
                                                IsSwipeEnabled="{Binding IsNotRunning}"
                                                CurvatureFactor="0"
                                                Grid.Row="1"
                                                Grid.Column="0">
                                    <wp:WheelPicker.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding ., StringFormat='{0:D2}'}"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalTextAlignment="Center"
                                                   FontSize="35"
                                                   FontFamily="RobotoRegular">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label"
                                                                 Binding="{Binding Source={x:Reference WheelPickerHours}, Path=IsSpinning}"
                                                                 Value="True">
                                                        <Setter Property="TextColor"
                                                                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </DataTemplate>
                                    </wp:WheelPicker.ItemTemplate>
                                    <wp:WheelPicker.Overlay>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="{Binding Source={x:Reference WheelPickerHours}, Path=ItemHeight}" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="0" />

                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="2" />
                                        </Grid>
                                    </wp:WheelPicker.Overlay>
                                </wp:WheelPicker>

                                <Label Text=":"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       FontSize="35"
                                       Grid.Row="1"
                                       Grid.Column="1" />

                                <Label Text="Minutes"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Grid.Row="0"
                                       Grid.Column="2" />
                                <wp:WheelPicker x:Name="WheelPickerMinutes"
                                                ItemsSource="{Binding MinutesItems}"
                                                SelectedIndex="{Binding Minutes, Mode=TwoWay}"
                                                IsSwipeEnabled="{Binding IsNotRunning}"
                                                CurvatureFactor="0"
                                                Grid.Row="1"
                                                Grid.Column="2">
                                    <wp:WheelPicker.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding ., StringFormat='{0:D2}'}"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalTextAlignment="Center"
                                                   FontSize="35"
                                                   FontFamily="RobotoRegular">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label"
                                                                 Binding="{Binding Source={x:Reference WheelPickerMinutes}, Path=IsSpinning}"
                                                                 Value="True">
                                                        <Setter Property="TextColor"
                                                                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </DataTemplate>
                                    </wp:WheelPicker.ItemTemplate>
                                    <wp:WheelPicker.Overlay>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="{Binding Source={x:Reference WheelPickerMinutes}, Path=ItemHeight}" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="0" />

                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="2" />
                                        </Grid>
                                    </wp:WheelPicker.Overlay>
                                </wp:WheelPicker>

                                <Label Text=":"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       FontSize="35"
                                       Grid.Row="1"
                                       Grid.Column="3" />

                                <Label Text="Seconds"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Center"
                                       Grid.Row="0"
                                       Grid.Column="4" />
                                <wp:WheelPicker x:Name="WheelPickerSeconds"
                                                ItemsSource="{Binding SecondsItems}"
                                                SelectedIndex="{Binding Seconds, Mode=TwoWay}"
                                                IsSwipeEnabled="{Binding IsNotRunning}"
                                                CurvatureFactor="0"
                                                Grid.Row="1"
                                                Grid.Column="4">
                                    <wp:WheelPicker.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding ., StringFormat='{0:D2}'}"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalTextAlignment="Center"
                                                   FontSize="35"
                                                   FontFamily="RobotoRegular">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label"
                                                                 Binding="{Binding Source={x:Reference WheelPickerSeconds}, Path=IsSpinning}"
                                                                 Value="True">
                                                        <Setter Property="TextColor"
                                                                Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </DataTemplate>
                                    </wp:WheelPicker.ItemTemplate>
                                    <wp:WheelPicker.Overlay>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="{Binding Source={x:Reference WheelPickerSeconds}, Path=ItemHeight}" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="0" />

                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="2" />
                                        </Grid>
                                    </wp:WheelPicker.Overlay>
                                </wp:WheelPicker>
                            </Grid>

                            <HorizontalStackLayout Spacing="12"
                                                   HorizontalOptions="Center">

                                <Button Text="Start"
                                        Command="{Binding StartCommand}" />

                                <Button Text="Pause"
                                        Command="{Binding PauseCommand}" />

                                <Button Text="Reset"
                                        Command="{Binding ResetCommand}" />

                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </toolkit:Expander>

                <toolkit:Expander x:Name="DateExpander"
                                  MaximumWidthRequest="500"
                                  Margin="10">
                    <toolkit:Expander.Header>
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                StrokeThickness="0"
                                Padding="10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,auto">
                                <Label Text="Date picker"
                                       VerticalTextAlignment="Center"
                                       FontSize="Medium" />
                                <Label Text="&#x25BC;"
                                       VerticalTextAlignment="Center"
                                       Grid.Column="1">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding Source={x:Reference DateExpander}, Path=IsExpanded}"
                                                     Value="True">
                                            <Setter Property="RotationX"
                                                    Value="180" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </Border>
                    </toolkit:Expander.Header>
                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                            StrokeThickness="0"
                            TranslationY="-8"
                            Padding="24">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="0,0,8,8" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <BoxView HeightRequest="1"
                                     Opacity=".3" />
                            <Grid ColumnDefinitions="*,2.5*,1.5*"
                                  ColumnSpacing="0">

                                <wp:WheelPicker x:Name="WheelPickerDays" 
                                                ItemsSource="{Binding Days}"
                                                SelectedItem="{Binding SelectedDay, Mode=TwoWay}"
                                                IsSelectionAnimated="{Binding IsDayAnimated}"
                                                VisibleItemsCount="9"
                                                EdgeItemTiltAngle="90"
                                                EdgeItemScale="0.7"
                                                EdgeItemOpacity=".9"
                                                Grid.Column="0">
                                    <wp:WheelPicker.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding ., StringFormat='{0:D2}'}"
                                                   VerticalTextAlignment="Center"
                                                   FontSize="25"
                                                   FontFamily="SanFrancisco">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="SelectionStates">
                                                        <VisualState x:Name="DefaultItem" />
                                                        <VisualState x:Name="CurrentItem">
                                                            <VisualState.Setters>
                                                                <Setter Property="TextColor"
                                                                        Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </Label>
                                        </DataTemplate>
                                    </wp:WheelPicker.ItemTemplate>
                                    <wp:WheelPicker.Overlay>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="{Binding Source={x:Reference WheelPickerDays}, Path=ItemHeight}" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="0" />

                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="2" />
                                        </Grid>
                                    </wp:WheelPicker.Overlay>
                                </wp:WheelPicker>

                                <wp:WheelPicker x:Name="WheelPickerMonths" 
                                                ItemsSource="{Binding Months}"
                                                SelectedItem="{Binding SelectedMonth, Mode=TwoWay}"
                                                VisibleItemsCount="9"
                                                EdgeItemTiltAngle="90"
                                                EdgeItemScale="0.7"
                                                EdgeItemOpacity=".9"
                                                Grid.Column="1">
                                    <wp:WheelPicker.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding ., StringFormat='{0:MMMM}'}"
                                                   VerticalTextAlignment="Center"
                                                   FontSize="25"
                                                   FontFamily="SanFrancisco">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="SelectionStates">
                                                        <VisualState x:Name="DefaultItem" />
                                                        <VisualState x:Name="CurrentItem">
                                                            <VisualState.Setters>
                                                                <Setter Property="TextColor"
                                                                        Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </Label>
                                        </DataTemplate>
                                    </wp:WheelPicker.ItemTemplate>
                                    <wp:WheelPicker.Overlay>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="{Binding Source={x:Reference WheelPickerMonths}, Path=ItemHeight}" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="0" />

                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="2" />
                                        </Grid>
                                    </wp:WheelPicker.Overlay>
                                </wp:WheelPicker>

                                <wp:WheelPicker x:Name="WheelPickerYears" 
                                                ItemsSource="{Binding Years}"
                                                SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                                                VisibleItemsCount="9"
                                                EdgeItemTiltAngle="90"
                                                EdgeItemScale="0.7"
                                                EdgeItemOpacity=".9"
                                                Grid.Column="2">
                                    <wp:WheelPicker.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding .}"
                                                   VerticalTextAlignment="Center"
                                                   FontSize="25"
                                                   FontFamily="SanFrancisco">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="SelectionStates">
                                                        <VisualState x:Name="DefaultItem" />
                                                        <VisualState x:Name="CurrentItem">
                                                            <VisualState.Setters>
                                                                <Setter Property="TextColor"
                                                                        Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </Label>
                                        </DataTemplate>
                                    </wp:WheelPicker.ItemTemplate>
                                    <wp:WheelPicker.Overlay>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="{Binding Source={x:Reference WheelPickerYears}, Path=ItemHeight}" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="0" />

                                            <BoxView Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}"
                                                     BackgroundColor="{OnPlatform Android=Transparent,Default={AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}}"
                                                     Opacity="0.8"
                                                     Grid.Row="2" />
                                        </Grid>
                                    </wp:WheelPicker.Overlay>
                                </wp:WheelPicker>
                            </Grid>
                            <Grid ColumnDefinitions="*,auto">
                                <Label Text="{Binding SelectedDate, StringFormat='{0:dd MMMM yyyy}'}"
                                       VerticalTextAlignment="Center" />

                                <Button Text="Today"
                                        HorizontalOptions="End"
                                        Command="{Binding TodayCommand}"
                                        Grid.Column="1" />
                            </Grid>

                        </VerticalStackLayout>
                    </Border>
                </toolkit:Expander>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>