<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:WheelPicker.Maui.Sample.ViewModels"
             xmlns:wp="clr-namespace:WheelPicker.Maui;assembly=SBC.WheelPicker.Maui"
             x:Class="WheelPicker.Maui.Sample.Views.PropertiesPage"
             x:Name="root"
             Title="Properties and their default values">

    <ContentPage.BindingContext>
        <models:PropertiesPageViewModel />
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="auto,1,*"
          RowDefinitions="auto,*"
          RowSpacing="0">
        <ContentView BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                     Padding="10,15"
                     Grid.ColumnSpan="3">
            <Label Text="{Binding Source={x:Reference root}, Path=Title}"
                   FontSize="15"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center" />
            <ContentView.Shadow>
                <Shadow Brush="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                        Offset="0,1"
                        Radius="5"
                        Opacity="0.2" />
            </ContentView.Shadow>
        </ContentView>
        <ScrollView Grid.Column="0"
                    Grid.Row="1"
                    Padding="10">
            <VerticalStackLayout Spacing="0">
                <Label Text="Selections"
                       FontAttributes="Bold" />
                <Grid ColumnDefinitions="auto,*"
                      RowDefinitions="auto,auto,auto,auto">
                    <Label Text="SelectedItem"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0" />
                    <Picker FontSize="12"
                            ItemsSource="{Binding Years}"
                            SelectedItem="{Binding SelectedYear}"
                            Margin="0,0,0,5"
                            Grid.Row="0"
                            Grid.Column="1" />
                    <Label Text="SelectedIndex"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0" />
                    <Picker FontSize="12"
                            ItemsSource="{Binding YearIndexes}"
                            SelectedItem="{Binding SelectedYearIndex}"
                            Grid.Row="1"
                            Grid.Column="1" />
                    <Label Text="IsSelectionAnimated"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0" />
                    <Switch IsToggled="{Binding Source={x:Reference WheelPicker}, Path=IsSelectionAnimated}"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            Grid.Row="2"
                            Grid.Column="1" />
                    <Grid ColumnDefinitions="*,auto"
                          RowDefinitions="auto,auto"
                          Grid.Row="3"
                          Grid.Column="0"
                          Grid.ColumnSpan="2">
                        <Label Text="SelectionThreshold"
                               FontSize="12"
                               VerticalTextAlignment="Center"
                               Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2" />
                        <Slider Value="{Binding Source={x:Reference WheelPicker}, Path=SelectionThreshold}"
                                Minimum="0"
                                Maximum="1"
                                Grid.Row="1"
                                Grid.Column="0" />
                        <Label Text="{Binding Source={x:Reference WheelPicker}, Path=SelectionThreshold, StringFormat='{0:F2}'}"
                               FontSize="12"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="End"
                               Grid.Row="1"
                               Grid.Column="1" />
                    </Grid>
                </Grid>
                <BoxView HeightRequest="1"
                         Margin="0,5"
                         Opacity=".3" />

                <Label Text="Feedbacks"
                       FontAttributes="Bold" />
                <Grid ColumnDefinitions="auto,*"
                      RowDefinitions="auto,auto">
                    <Label Text="HapticFeedback"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0" />
                    <Switch IsToggled="{Binding Source={x:Reference WheelPicker}, Path=HapticFeedback}"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            Grid.Row="0"
                            Grid.Column="1" />
                    <Label Text="SoundFeedback"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0" />
                    <Switch IsToggled="{Binding Source={x:Reference WheelPicker}, Path=SoundFeedback}"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            Grid.Row="1"
                            Grid.Column="1" />
                </Grid>
                <BoxView HeightRequest="1"
                         Margin="0,5"
                         Opacity=".3" />

                <Label Text="Interaction"
                       FontAttributes="Bold" />
                <Grid ColumnDefinitions="auto,*"
                      RowDefinitions="auto,auto">
                    <Label Text="Loop"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0" />
                    <Switch IsToggled="{Binding Source={x:Reference WheelPicker}, Path=Loop}"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            Grid.Row="0"
                            Grid.Column="1" />
                    <Label Text="IsSwipeEnabled"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0" />
                    <Switch IsToggled="{Binding Source={x:Reference WheelPicker}, Path=IsSwipeEnabled}"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            Grid.Row="1"
                            Grid.Column="1" />
                </Grid>
                <BoxView HeightRequest="1"
                         Margin="0,5"
                         Opacity=".3" />

                <Label Text="Appearance"
                       FontAttributes="Bold"
                       Margin="0,0,0,5" />
                <Grid ColumnDefinitions="*,auto"
                      RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto, auto,auto">
                    <Label Text="VisibleItemsCount"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                    <Slider x:Name="VisibleItemsCountSlider"
                            ValueChanged="OnVisibleItemsCountSliderValueChanged"
                            Minimum="3"
                            Maximum="11"
                            Grid.Row="1"
                            Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=VisibleItemsCount, StringFormat='{0}'}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="1"
                           Grid.Column="1" />

                    <Label Text="CurvatureFactor"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                    <Slider Value="{Binding Source={x:Reference WheelPicker}, Path=CurvatureFactor}"
                            Minimum="0"
                            Maximum="1"
                            Grid.Row="3"
                            Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=CurvatureFactor, StringFormat='{0:F2}'}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="3"
                           Grid.Column="1" />

                    <Label Text="EdgeItemTiltAngle"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="4"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                    <Slider x:Name="EdgeItemTiltAngleSlider"
                            ValueChanged="OnEdgeItemTiltAngleSliderValueChanged"
                            Minimum="0.0"
                            Maximum="90.0"
                            Grid.Row="5"
                            Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=EdgeItemTiltAngle, StringFormat='{0}Â°'}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="5"
                           Grid.Column="1" />

                    <Label Text="EdgeItemScale"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="6"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                    <Slider Value="{Binding Source={x:Reference WheelPicker}, Path=EdgeItemScale}"
                            Minimum="0.1"
                            Maximum="1.0"
                            Grid.Row="7"
                            Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=EdgeItemScale, StringFormat='{0:F2}'}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="7"
                           Grid.Column="1" />

                    <Label Text="EdgeItemOpacity"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="8"
                           Grid.Column="0"
                           Grid.ColumnSpan="2" />
                    <Slider Value="{Binding Source={x:Reference WheelPicker}, Path=EdgeItemOpacity}"
                            Minimum="0.1"
                            Maximum="1.0"
                            Grid.Row="9"
                            Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=EdgeItemOpacity, StringFormat='{0:F2}'}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="9"
                           Grid.Column="1" />
                </Grid>

                <BoxView HeightRequest="1"
                         Margin="0,5"
                         Opacity=".3" />

                <Label Text="Readonly"
                       FontAttributes="Bold"
                       Margin="0,0,0,5" />
                <Grid ColumnDefinitions="auto,*"
                      RowDefinitions="auto,auto,auto"
                      RowSpacing="3">

                    <Label Text="IsDragging"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0" />

                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=IsDragging}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="0"
                           Grid.Column="1" />

                    <Label Text="IsSpinning"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=IsSpinning}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="1"
                           Grid.Column="1" />

                    <Label Text="ItemHeight"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0" />
                    <Label Text="{Binding Source={x:Reference WheelPicker}, Path=ItemHeight, StringFormat='{0:F2}'}"
                           FontSize="12"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End"
                           Grid.Row="2"
                           Grid.Column="1" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        <BoxView Opacity=".3"
                 Grid.Column="1"
                 Grid.Row="1"
                 Margin="0,10" />
        <wp:WheelPicker x:Name="WheelPicker"
                        ItemsSource="{Binding Years}"
                        SelectedItem="{Binding SelectedYear}"
                        SelectedIndex="{Binding SelectedYearIndex}"
                        Grid.Column="2"
                        Grid.Row="1">
            <wp:WheelPicker.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}"
                           FontFamily="RobotoRegular"
                           VerticalTextAlignment="Center"
                           HorizontalOptions="Center"
                           MaximumHeightRequest="40"
                           FontSize="25" />
                </DataTemplate>
            </wp:WheelPicker.ItemTemplate>
        </wp:WheelPicker>
    </Grid>
</ContentPage>